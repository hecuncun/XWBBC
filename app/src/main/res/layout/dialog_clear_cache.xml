<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingBottom="15dp"
    android:paddingTop="20dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="确定清除缓存吗？"
        android:textColor="@color/color_gray_333333"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_cancel"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bg_gray_cccccc_kuang_r25"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/color_gray_CCCCCC"
            android:textSize="18sp" />
        <TextView
            android:id="@+id/tv_comfirm"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:layout_marginLeft="15dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bg_yellow_kuang_r25"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/color_primary_yellow"
            android:textSize="18sp" />
    </LinearLayout>

</LinearLayout>