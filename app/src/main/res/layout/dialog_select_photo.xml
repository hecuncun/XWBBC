<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_white_r_t_16"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:src="@mipmap/icon_close_dialog" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="请选择头像"
            android:textColor="@color/color_gray_333333"
            android:textSize="15sp" />

        <TextView
            android:visibility="gone"
            android:id="@+id/tv_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:text="确认"
            android:textColor="@color/color_gray_333333"
            android:textSize="15sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="15dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_def1"
            android:layout_width="0dp"
            android:layout_height="58dp"
            android:layout_weight="1"
            android:src="@mipmap/icon_def_head" />

        <ImageView
            android:id="@+id/iv_def2"
            android:layout_width="0dp"
            android:layout_height="58dp"
            android:layout_weight="1"
            android:src="@mipmap/icon_def_head" />

        <ImageView
            android:id="@+id/iv_def3"
            android:layout_width="0dp"
            android:layout_height="58dp"
            android:layout_weight="1"
            android:src="@mipmap/icon_def_head" />

        <ImageView
            android:id="@+id/iv_def4"
            android:layout_width="0dp"
            android:layout_height="58dp"
            android:layout_weight="1"
            android:src="@mipmap/icon_def_head" />
    </LinearLayout>

    <View
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_gray_CCCCCC" />
    <TextView
        android:id="@+id/tv_album"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/bg_gray_979797_kuang_r8"
        android:gravity="center"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:textSize="18sp"
        android:text="从相册选一张"
        android:textColor="@color/color_gray_333333"/>

    <TextView
        android:layout_marginBottom="15dp"
        android:id="@+id/tv_take_photo"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/bg_gray_979797_kuang_r8"
        android:gravity="center"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:textSize="18sp"
        android:text="拍一张照片"
        android:textColor="@color/color_gray_333333"/>

</LinearLayout>