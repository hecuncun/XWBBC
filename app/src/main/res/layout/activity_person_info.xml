<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_primary_bar"
    android:orientation="vertical">

    <include layout="@layout/toolbar" />

    <ImageView
        android:id="@+id/iv_head_photo"
        android:layout_width="58dp"
        android:layout_height="58dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="46dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/icon_def_head" />

    <TextView
        android:id="@+id/tv_nick_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:drawableRight="@mipmap/icon_edit_yellow"
        android:padding="10dp"
        android:drawablePadding="6dp"
        android:text="昵称"
        android:textColor="@color/color_gray_F9F9F9"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tv_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="ID：423434555"
        android:textColor="@color/color_gray_999999"
        android:textSize="12sp" />

    <LinearLayout
        android:id="@+id/ll_sex"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:background="@drawable/bg_gray_151516_r5"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:paddingRight="10dp"
        android:paddingBottom="5dp">

        <ImageView
            android:id="@+id/iv_sex"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/icon_women" />

        <TextView
            android:id="@+id/tv_sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="女"
            android:textColor="@color/white"
            android:textSize="12sp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_age"
            android:layout_width="60dp"
            android:layout_height="67dp"
            android:layout_marginRight="30dp"
            android:layout_toLeftOf="@id/ll_star"
            android:background="@drawable/bg_gray_151516_r5"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_age"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="80后"
                android:textColor="@color/color_gray_F9F9F9"
                android:textSize="12sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="年龄"
                android:textColor="@color/color_gray_CCCCCC"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_star"
            android:layout_width="60dp"
            android:layout_height="67dp"
            android:background="@drawable/bg_gray_151516_r5"
            android:layout_centerInParent="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_star"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="巨蟹座"
                android:textColor="@color/color_gray_F9F9F9"
                android:textSize="12sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="星座"
                android:textColor="@color/color_gray_CCCCCC"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_city"
            android:layout_width="60dp"
            android:layout_height="67dp"
            android:layout_marginLeft="30dp"
            android:background="@drawable/bg_gray_151516_r5"
            android:layout_toRightOf="@id/ll_star"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_city"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="北京市"
                android:textColor="@color/color_gray_F9F9F9"
                android:textSize="12sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="地区"
                android:textColor="@color/color_gray_CCCCCC"
                android:textSize="12sp" />
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>