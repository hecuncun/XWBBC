<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_primary_bar"
    android:orientation="vertical">

    <include layout="@layout/toolbar" />

    <ImageView
        android:id="@+id/iv_head_photo"
        android:layout_width="58dp"
        android:layout_height="58dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="46dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/icon_def_head" />

    <TextView
        android:id="@+id/tv_nick_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:padding="10dp"
        android:text="昵称"
        android:textColor="@color/color_gray_F9F9F9"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tv_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="ID：423434555"
        android:textColor="@color/color_primary_yellow"
        android:textSize="12sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="14dp"
        android:layout_marginRight="15dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_gray_151516_r5"
            android:paddingLeft="12dp"
            android:paddingTop="6dp"
            android:paddingRight="12dp"
            android:paddingBottom="6dp"
            android:text="男"
            android:textColor="@color/color_gray_CCCCCC" />

        <TextView
            android:id="@+id/tv_age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@drawable/bg_gray_151516_r5"
            android:paddingLeft="12dp"
            android:paddingTop="6dp"
            android:paddingRight="12dp"
            android:paddingBottom="6dp"
            android:text="80后"
            android:textColor="@color/color_gray_CCCCCC" />

        <TextView
            android:id="@+id/tv_star"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@drawable/bg_gray_151516_r5"
            android:paddingLeft="12dp"
            android:paddingTop="6dp"
            android:paddingRight="12dp"
            android:paddingBottom="6dp"
            android:text="巨蟹座"
            android:textColor="@color/color_gray_CCCCCC" />

        <TextView
            android:id="@+id/tv_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@drawable/bg_gray_151516_r5"
            android:paddingLeft="12dp"
            android:paddingTop="6dp"
            android:paddingRight="12dp"
            android:paddingBottom="6dp"
            android:text="北京"
            android:textColor="@color/color_gray_CCCCCC" />
    </LinearLayout>

    <LinearLayout
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ll_person_info"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:drawableRight="@mipmap/icon_edit_yellow"
            android:drawablePadding="8dp"
            android:text="填写资料"
            android:textColor="@color/color_gray_F9F9F9"
            android:textSize="15sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:background="@color/color_gray_151516"
            android:padding="15dp"
            android:text="点击此处添加个人说明"
            android:textColor="@color/color_gray_CCCCCC" />
    </LinearLayout>
    <TextView
        android:visibility="gone"
        android:id="@+id/tv_info_des"
        android:layout_width="match_parent"
        android:layout_height="69dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="25dp"
        android:layout_marginRight="15dp"
        android:background="@color/color_gray_151516"
        android:padding="15dp"
        android:text="点击此处添加个人说明"
        android:textColor="@color/color_gray_CCCCCC" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="40dp"
        android:layout_marginRight="15dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_about"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:drawableRight="@mipmap/icon_arrow_right"
            android:gravity="center_vertical"
            android:text="关于星顽半"
            android:textColor="@color/color_gray_F9F9F9"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_agreement"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:drawableRight="@mipmap/icon_arrow_right"
            android:gravity="center_vertical"
            android:text="政策与协议"
            android:textColor="@color/color_gray_F9F9F9"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_good_evaluate"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:drawableRight="@mipmap/icon_arrow_right"
            android:gravity="center_vertical"
            android:text="给个好评"
            android:textColor="@color/color_gray_F9F9F9"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_contact"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:drawableRight="@mipmap/icon_arrow_right"
            android:gravity="center_vertical"
            android:text="联系我们"
            android:textColor="@color/color_gray_F9F9F9"
            android:textSize="15sp" />
    </LinearLayout>
</LinearLayout>