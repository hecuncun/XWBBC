<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="menuDialog" parent="android:Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/alivc_common_bg_transparent</item>
        <item name="android:windowAnimationStyle">@null</item>
        <!-- 为了避免在有 NavigationBar 的手机上 Dialog 从 NavigationBar 底部上来。去掉 Dialog 的动画，使用 View 的动画。-->
        <item name="android:layout_width">match_parent</item>
        <item name="android:padding">0dp</item>
    </style>

    <!-- about dialog  start-->
    <style name="AlivcDialogButtonStyle_Group">

        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_marginBottom">32dp</item>
    </style>
    <style name="AlivcDialogButtonStyle_Text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/alivc_common_font_white</item>
    </style>

    <style name="AlivcDialogButtonStyle_Icon">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:layout_gravity">center|bottom</item>
    </style>

    <!-- about dialog  end-->


    <style name="expendText" parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">@dimen/alivc_common_font_13</item>
        <item name="android:textColor">@color/alivc_common_font_white</item>
    </style>

    <style name="collapse" parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">@dimen/alivc_common_font_15</item>
        <item name="android:textColor">@color/alivc_common_font_white</item>
    </style>


    <style name="AlivcLittlePublishEditTheme" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/alivc_common_bg_gray_darker</item>
        <item name="colorControlActivated">@color/alivc_common_cyan_light</item>
    </style>


</resources>
