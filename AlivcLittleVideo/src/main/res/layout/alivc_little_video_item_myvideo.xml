<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_root"
    android:layout_width="match_parent"
    android:layout_height="@dimen/alivc_common_height_cv_150"
    android:layout_margin="@dimen/alivc_common_margin_4"
    app:cardCornerRadius="@dimen/alivc_common_radius_4"
    app:cardElevation="0dp"
    android:minWidth="110dp"
    >
    <ImageView
        android:id="@+id/iv_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/tv_censor_lable"
        android:layout_width="40dp"
        android:layout_height="16dp"
        android:layout_gravity="right"
        android:gravity="center"
        android:textSize="@dimen/alivc_common_font_10"
        android:textColor="@color/alivc_common_font_white"
        />
</android.support.v7.widget.CardView>