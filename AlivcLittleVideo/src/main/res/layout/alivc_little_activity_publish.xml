<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/alivc_common_theme_primary"
    android:gravity="center_horizontal"
    android:orientation="vertical">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/alivc_common_height_tittle_64"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_gravity="center_vertical">
        <ImageView
            android:id="@+id/iv_left"
            style="?android:attr/actionButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/alivc_common_keyline_tittle_bar_left"
            android:src="@mipmap/aliyun_svideo_back"/>
        <TextView
            android:id="@+id/tv_publish"
            style="@style/NextBtnStyle"
            android:text="@string/alivc_editor_publish_tittle"
            android:layout_gravity="end|center_vertical"
            android:layout_marginRight="@dimen/alivc_common_keyline_tittle_bar_right"
            android:textSize="@dimen/alivc_common_font_14" />
    </FrameLayout>
    <ImageView
        android:id="@+id/iv_cover"
        android:background="@color/alivc_common_bg_black"
        android:layout_width="@dimen/alivc_little_publish_cover_w"
        android:layout_height="@dimen/alivc_little_publish_cover_h"
        android:scaleType="centerCrop"
        android:layout_marginTop="@dimen/alivc_common_margin_18"/>
    <EditText
        android:id="@+id/et_video_describe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/alivc_little_publish_hint_video_desc"
        android:textColorHint="@color/alivc_common_font_white"
        android:layout_marginLeft="@dimen/alivc_common_margin_16"
        android:layout_marginRight="@dimen/alivc_common_margin_16"
        android:textCursorDrawable="@drawable/alivc_little_publish_edit_cursor_shap"
        android:theme="@style/AlivcLittlePublishEditTheme"
        android:textColor="@color/alivc_common_font_white"
        android:textSize="@dimen/alivc_common_font_14"
        android:inputType="text"
        android:singleLine="true"
        />

</LinearLayout>