<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <ImageView
        android:id="@+id/iv_user_icon"
        android:layout_width="@dimen/alivc_little_content_view_user_icon_width"
        android:layout_height="@dimen/alivc_little_content_view_user_icon_height"
        android:scaleType="centerCrop"
        />

    <TextView
        android:id="@+id/tv_user_nick_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/alivc_common_font_white"
        android:textSize="@dimen/alivc_little_content_view_nick_name_text_size"
        android:layout_toRightOf="@id/iv_user_icon"
        android:singleLine="true"
        android:gravity="center"
        android:layout_marginLeft="@dimen/alivc_little_content_view_nick_name_margin_left"
        android:layout_toEndOf="@id/iv_user_icon"
        android:layout_marginStart="@dimen/alivc_little_content_view_nick_name_margin_left"
        android:layout_alignBottom="@id/iv_user_icon"
        android:layout_marginBottom="@dimen/alivc_little_content_view_nick_name_margin_bottom"
        />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_user_icon"
        android:textColor="@color/alivc_common_font_white"
        android:textSize="@dimen/alivc_little_content_view_video_title_text_size"
        android:maxLines="2"
        android:maxWidth="@dimen/alivc_little_content_view_video_title_max_width"
        android:layout_marginTop="@dimen/alivc_little_content_view_video_title_margin_top"
        />
</merge>